<div class='container'>

        <div class='px-5 pt-3'>
            <% if @gossip.errors.any? %>
                  <div class="alert alert-danger">
                  <button type='button' class='close' data-dismiss='alert'>&times;</button>
                        <% @gossip.errors.full_messages.each do |message| %>
                        - <%= message %> 
                        <% end %>
                  </div>
            <% end %>
      </div>
      <p class='h1 mt-5 text-primary'>Creer ton potin !</p>

      <div class='w-75 my-2 mx-auto'>

            <%= form_tag url_for(action: 'create'), method: "post" do %>
                  <div class="pt-5 form-group">
                        <%= label_tag "Title", 'Title' , class: 'pb-2 h4 form-text text-white font-weight-bold'%>
                        <%= text_field_tag 'title', @gossip.title , class: 'form-control' %>
                  </div>

                  <div class="pt-3 form-group">
                        <%= label_tag 'content', 'content', class: 'pb-2 h4 form-text text-white font-weight-bold' %>
                        <%= text_area_tag 'content', @gossip.content, class: 'form-control'%>
                  </div>
                

                  <%= submit_tag "Create Gossip", class: 'mt-3 btn btn-primary btn-submit' %>

            <% end %>

            
                 
                  
      

      </div>
</div>
