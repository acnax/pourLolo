<div class='container '>


    <div class='px-5 pt-3'>
      <% if @gossip.errors.any? %>
        <div class="alert alert-danger">
          <button type='button' class='close' data-dismiss='alert'>&times;</button>
            <% @gossip.errors.full_messages.each do |message| %>
              - <%= message %> 
            <% end %>
        </div>
      <% end %>
    </div>


	<div class='mt-5 pb-2 border-bottom border-primary'>	
			<span class='h1 text-white'>Editer l'article</span>
	</div>

	<div class='my-5'>

		<%= form_for @gossip do |f| %>
			<div class='pb-3 form-group'>
				<label class='h4 pb-2 text-white'>Titre du Gossip</label>
				<%= f.text_field :title, class:'form-control' %>
			</div>
			<div class='form-group'>
				<label class='h4 pb-2 text-white'>Contenu du Gossip</label>
				<%= f.text_area :content, class:'form-control' %>
			</div>
			<div class='form-group pt-3'>
					<button type='submit' class="btn btn-primary px-5">Edit</button>	
			</div>


		<% end %>
		
	</div>



</div>