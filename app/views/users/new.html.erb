<div class='mt-5 container'>
	
		<div class='my-5 row'>
			<div class='mx-auto h3 text-white font-weight-bold'>Inscription</div>
		</div>

		<div class='py-5 row bg-dark border border-info shadow rounded'>
			<div class='col-8 mx-auto'>
				<%= form_for @user do |f| %>
							<label class='h5 text-white'>First name</label>
							<div class='pb-3 form-group'>
								<%= f.text_field :first_name, class:'form-control'  %>
							</div>
							<label class='h5 text-white'>Last name</label>
							<div class='pb-3 form-group'>
								<%= f.text_field :last_name, class:'form-control' %>
							</div>
							<label class='h5 text-white'>Email</label>
							<div class='pb-3 form-group'>
								<%= f.email_field :email, class:'form-control', placeholder:'quelquechose@gmail.com, hotmail.fr....' %>
							</div>
							<label class='h5 text-white'>Mot de Passe</label>
							<div class='pb-3 form-group'>
								<%= f.password_field :password, class:'form-control' %>
							</div>
							<label class='h5 text-white'>Confirmation MDP</label>
							<div class='pb-3 form-group'>
								<%= f.password_field :password_confirmation, class:'form-control' %>
							</div>

							<div class='form-group'>
								<button type='submit' class="btn btn-primary btn-block px-5">Confirm</button>
							</div>
				<% end %>
			</div>

		</div>
	


</div>