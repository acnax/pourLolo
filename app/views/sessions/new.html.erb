<div class='my-5 container'>
	<div class='pt-4 pb-2 row'>
		<div class='col-md-4 mx-auto'>
			<h3 class='text-primary font-weight-bold'>Connexion</h3>
		</div>

	</div>


	<div class='row'>
		<div class='pt-5 col-md-4 mx-auto border bg-secondary shadow'>
			<%= form_for(:session, url: sessions_path) do |f| %>
				<label class='pb-2 h5 text-white'>Email</label>
					<div class='pb-5 form-group'>
						<%= f.email_field :email, class:'form-control' %>
					</div>
				<label class='pb-2 h5 text-white'>Mot de Passe</label>
					<div class='pb-2 form-group'>
						<%= f.password_field :password, class:'form-control' %>
					</div>
				<div class='pb-3 form-group'>
					<button type='submit' class="btn btn-primary btn-block px-5">Connexion</button>
				</div>
			<% end %>
		</div>
	</div>

</div>